<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="nitezh.ministock"
          android:versionCode="45"
          android:versionName="45">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk android:minSdkVersion="7"/>

    <application
            android:icon="@drawable/icon"
            android:label="@string/app_name">
        <activity
                android:name=".Ministocks"
                android:configChanges="orientation"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".Portfolio"
                android:configChanges="orientation"
                android:label="Portfolio"
                android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".Preferences"
                android:clearTaskOnLaunch="true"
                android:configChanges="orientation"
                android:finishOnTaskLaunch="true"
                android:label="Preferences"
                android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.EDIT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PICK"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>
        <activity
                android:name=".configure.Configure_1x2"
                android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".configure.Configure_2x2"
                android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".configure.Configure_1x4"
                android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".configure.Configure_2x4"
                android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".SymbolSearchableActivity"
                android:configChanges="orientation"
                android:excludeFromRecents="true"
                android:launchMode="singleTop"
                android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.EDIT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PICK"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>

        <!-- Provides search suggestions for words and their definitions. -->
        <provider
                android:name="SymbolProvider"
                android:authorities="name.nitesh.ministocks.library.stocksymbols"
                android:syncable="false"/>

        <!-- Receivers -->
        <receiver
                android:name=".Widget"
                android:label="Ministocks">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <intent-filter>
                <action android:name="nitezh.ministock.ALARM_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/widget_1x2"/>
        </receiver>
        <receiver
                android:name=".widget.Widget_1x4"
                android:label="Ministocks (1x4)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <intent-filter>
                <action android:name="nitezh.ministocks.ALARM_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/widget_1x4"/>
        </receiver>
        <receiver
                android:name=".widget.Widget_2x2"
                android:label="Ministocks (2x2)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <intent-filter>
                <action android:name="nitezh.ministocks.ALARM_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/widget_2x2"/>
        </receiver>
        <receiver
                android:name=".widget.Widget_2x4"
                android:label="Ministocks (2x4)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <intent-filter>
                <action android:name="nitezh.ministocks.ALARM_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/widget_2x4"/>
        </receiver>
    </application>

</manifest>